<div class="p-5">
  <div class="text-center mb-4">
    <a href="/"><img src="../../../images/logo-apps.svg" alt="Logo LP3I" width="250px"></a>
  </div>
  <% if(validates.length > 0) { %>
  <% validates.forEach(validate=> { %>
  <div class="text-center bg-danger text-white rounded my-3 py-2">
    <span><%= validate.message %></span>
  </div>
  <% }); %>
  <% } %>
  <% if(message.length > null) { %>
  <div class="text-center bg-danger text-white rounded my-3 py-2">
    <span class="small">
      <%= message %>
    </span>
  </div>
  <% } %>
  <form class="user" action="/auth/login" method="POST">
    <div class="form-group">
      <input type="email" name="email" class="form-control form-control-user" placeholder="Type your email in here...">
    </div>
    <div class="form-group">
      <input type="password" name="password" class="form-control form-control-user" placeholder="Type your password in here...">
    </div>
    <button type="submit" class="btn btn-primary btn-user btn-block">
      Login
    </button>
  </form>
  <hr>
  <div class="text-center">
    <a class="small text-primary" href="#">Forgot Password?</a>
  </div>
  <div class="text-center">
    <a class="small text-primary" href="/auth/register">Don't have account yet?</a>
  </div>
</div>